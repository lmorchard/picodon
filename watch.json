{
  "install": {
    "include": [
      "^package\\.json$"
    ]
  },
  "restart": {
    "exclude": [
      "^client/",
      "^server/routes/",
      "^server/sockets/handlers\\.js"
    ],
    "include": [
      "index\\.js",
      "^server",
      "^\\.env$",
      "webpack\\.config\\.js"
    ]
  },
  "throttle": 1000
}
